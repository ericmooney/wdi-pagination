<h1>Listing Articles</h1>

<% @articles.each do |article| %>
  <div class="article">
    <h2><%= link_to "#{article.id} - #{article.title}", article %></h2>
    <p><%= article.body %></p>
  </div>
<% end %>

<ul id="pagination">
  <% (@article_count / @per_page).times do |page| %>
    <% page_number = page + 1 %>
    <li><%= link_to page_number, articles_path(:page => page_number) %></li>
  <% end %>
</ul>